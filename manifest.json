{
  "manifest_version": 3,
  "name": "Faceit Position Caller",
  "version": "0.1.0",
  "description": "Send preset messages into team chat when a match is ready on FACEIT.",
  "permissions": [ "storage", "tabs", "activeTab", "scripting", "webNavigation" ],
  "host_permissions": [ "https://*.faceit.com/*" ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "https://www.faceit.com/pl/home", "https://*.faceit.com/*" ],
      "js": [ "contentScript.js" ]
    }
  ],
  "action": {
    "default_icon": {
      "24": "Assets/Faceit_Extension.png"
    },
    "default_title": "Faceit Position Caller",
    "default_popup": "popup.html"
  }
}
